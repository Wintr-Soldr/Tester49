        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="13dp"
        android:background="@drawable/textview_border"
        android:layout_x="195dp"
        android:layout_y="360dp"
        />

    <TextView
        android:id="@+id/textView2"
