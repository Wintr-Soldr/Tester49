        android:scrollbarSize="10dp"


        >

        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:text="Text to be displayed here"
                android:id="@+id/card1"


                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:text="card2 Text to be dispalyed"
                android:id="@+id/card2"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:text="Card3 text to be dispalyed"
                android:id="@+id/card3"
                />


        </LinearLayout>

    </HorizontalScrollView>


